@model OnlineQuizApp.Models.Student

@{
    ViewBag.Title = "Please Type Your email below";
}
<h2>@ViewBag.Title</h2>
<h3 style="margin-top:3px">To retrieve info about previous Quiz results</h3>
@using (Html.BeginForm("Display", "Home", FormMethod.Post))
{
    <div class="col-sm-2" style="padding:0px">@Html.Label("Enter Email")</div>
    <div class="col-md-5">@Html.TextBoxFor(x => x.email, new { @class = "form-control" })</div>
    <div class="col-sm-2" style="padding:0px">@Html.Label("Enter Name")</div>
    <div class="col-md-5">@Html.TextBoxFor(x => x.name, new { @class = "form-control" })</div>
    <div class="form-group">
        <div class="col-md-3"></div>
        <div class="col-md-5">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
}